<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/plantfrgmentphoto4"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plantLocationMap"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="580dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="-3dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="542dp"
                android:layout_marginEnd="225dp"
                android:fontFamily="@font/inter"
                android:text="Location" />

            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="151dp"
                android:layout_height="147dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="43dp"
                android:layout_marginTop="99dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/plantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="202dp"
                android:text="" />

            <TextView
                android:id="@+id/plant_id"
                android:layout_width="41dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="363dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="11dp"
                android:text="ID" />

            <TextView
                android:id="@+id/scientific_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="47dp"
                android:layout_marginTop="-181dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Scientific Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/plant_description"
                android:layout_width="335dp"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="263dp"
                android:layout_marginEnd="39dp"
                android:fontFamily="@font/inter"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:text="Description"
                android:textSize="16sp" />

            <Button
                android:id="@+id/learn_more_btn"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="450dp"
                android:layout_marginEnd="224dp"
                android:background="@drawable/green3_box"
                android:text="Learn More"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/green5" />

            <Button
                android:id="@+id/audio_btn"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="229dp"
                android:layout_marginTop="449dp"
                android:background="@drawable/newbuttondesign"
                android:fontFamily="@font/inter_semibold"
                android:text="Audio"
                android:textColor="#000000"
                app:backgroundTint="#FFC107" />

            <TextView
                android:id="@+id/plantNm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Plant Name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/geographic_distribution"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@+id/plant_map"
                android:layout_alignEnd="@+id/plant_map"
                android:layout_marginTop="-179dp"
                android:layout_marginEnd="1dp"
                android:fontFamily="@font/inter_light"
                android:text="Geographic distribution"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/plant_map"
                android:layout_width="151dp"
                android:layout_height="147dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="218dp"
                android:layout_marginTop="99dp"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/plantLocationBtn"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="122dp"
                android:layout_marginTop="517dp"
                android:text="Take Me To Map" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>