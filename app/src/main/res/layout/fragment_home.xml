<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmenthome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green2"
    tools:context=".HomeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green1">

            <FrameLayout
                android:id="@+id/banner_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/green4"
                android:elevation="8dp"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/banner_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_close_24"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/banner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your message here"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/banner_layout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/green4_box" />

            <TextView
                android:layout_width="214dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignBottom="@+id/imageView"
                android:layout_marginStart="160dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="143dp"
                android:text="UNSW BUCKER TRAIL APP"
                android:textColor="@color/green1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicture"
                android:layout_width="141dp"
                android:layout_height="128dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="251dp"
                android:src="@drawable/userpic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/plantImageOne"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="28dp"
                android:layout_toStartOf="@+id/plantImageTwo" />

            <ImageView
                android:id="@+id/plantImageThree"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textView8"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="44dp" />

            <ImageView
                android:id="@+id/plantImageTwo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/plantImageThree" />

            <ImageView
                android:id="@+id/toHardQuiz"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView9"
                android:layout_marginStart="42dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="41dp"
                android:layout_toStartOf="@+id/toLocationQuiz"
                android:layout_toEndOf="@+id/toEasyQuiz"
                android:src="@drawable/hard" />

            <ImageView
                android:id="@+id/toEasyQuiz"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/easyquiz" />

            <ImageView
                android:id="@+id/toLocationQuiz"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView9"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="44dp"
                android:src="@drawable/locationquiz" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/toEasyQuiz"
                android:layout_alignTop="@+id/toEasyQuiz"
                android:layout_alignEnd="@+id/toEasyQuiz"
                android:layout_marginStart="0dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Easy"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/toHardQuiz"
                android:layout_alignTop="@+id/toHardQuiz"
                android:layout_alignEnd="@+id/toHardQuiz"
                android:layout_marginStart="0dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Hard"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/toLocationQuiz"
                android:layout_alignTop="@+id/toLocationQuiz"
                android:layout_alignEnd="@+id/toLocationQuiz"
                android:layout_marginStart="0dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/plantOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/plantImageOne"
                android:layout_alignTop="@+id/plantImageOne"
                android:layout_alignEnd="@+id/plantImageOne"
                android:layout_marginStart="0dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="One"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/plantThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/plantImageThree"
                android:layout_alignTop="@+id/plantImageThree"
                android:layout_alignEnd="@+id/plantImageThree"
                android:layout_marginStart="0dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Three"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/plantTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/plantImageTwo"
                android:layout_alignTop="@+id/plantImageTwo"
                android:layout_alignEnd="@+id/plantImageTwo"
                android:layout_marginStart="0dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Two"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="35dp"
                android:text="EXPLORE PLANTS"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plantImageOne"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:text="PRACTICE QUIZZES"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/toPlantsBtn"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/green1_box"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:text="See All"
                android:textColor="@color/black"
                app:backgroundTint="@color/green1" />

            <Button
                android:id="@+id/toQuizzesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plantImageOne"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/green1_box"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:text="Start"
                android:textColor="@color/black"
                app:backgroundTint="@color/green1" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="714dp"
                android:layout_marginEnd="221dp"
                android:text="" />

            <Button
                android:id="@+id/logout_but"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="345dp"
                android:layout_marginTop="146dp"
                android:background="@drawable/baseline_logout_24"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/editProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="156dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="39dp"
                android:background="@drawable/green1_box"
                android:text="edit user"
                app:rippleColor="@color/green5" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/plantImageOne"
                android:layout_alignParentStart="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/plantImageOne"
                android:layout_alignParentStart="true"
                android:layout_marginStart="184dp"
                android:layout_marginTop="31dp" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/plantImageOne"
                android:layout_alignParentStart="true"
                android:layout_marginStart="298dp"
                android:layout_marginTop="31dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="161dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="141dp"
                android:text="Welcome"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="270dp"
                android:layout_marginTop="61dp"
                android:layout_marginEnd="11dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>