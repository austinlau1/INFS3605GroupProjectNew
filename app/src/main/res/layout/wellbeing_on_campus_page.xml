<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/light_green_background"
    tools:context=".WellBeingOnCampus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wellb_title"
                        android:textColor="@color/green5"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="26sp"
                        android:text="Wellbeing on Campus"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <ImageView
                        android:id="@+id/img_wellb"
                        android:scaleType="fitXY"
                        android:src="@drawable/placesbanner"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="200dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/author_text_detail"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="10sp"
                        android:text="UNSW Wellbeing"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/faq_1"
                android:textSize="20sp"
                android:fontFamily="@font/inter_black"
                android:textColor="@color/black"
                android:text="Green Spaces?"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/wellb_detail_2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter"
                android:text="@string/wellbeing1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/wellb_detail_3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter"
                android:text="@string/wellbeing2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:id="@+id/img_lib_lawn"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/liblawn">

            </ImageView>







        </LinearLayout>
    </ScrollView>
</LinearLayout>
