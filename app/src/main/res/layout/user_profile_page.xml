<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userprofilebg"
    tools:layout_editor_absoluteX="-11dp"
    tools:layout_editor_absoluteY="29dp">

    <TextView
        android:id="@+id/welcome_text2"
        android:layout_width="379dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter_bold"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/userEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/hiUser"
        android:layout_width="30dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/inter_bold"
        android:text="Hi,"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/userEmail"
        app:layout_constraintEnd_toEndOf="@+id/welcome_text2"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="@+id/welcome_text2"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text2"
        app:layout_constraintVertical_bias="0.48" />

    <TextView
        android:id="@+id/hiUserName"
        android:layout_width="167dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/inter_bold"
        android:text="first name"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/userEmail"
        app:layout_constraintEnd_toEndOf="@+id/welcome_text2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/hiUser"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text2"
        app:layout_constraintVertical_bias="0.452" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/white_box"
        android:backgroundTint="#7EFFFFFF"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter"
        android:text="Email"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userUsername"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/white_box"
        android:backgroundTint="#7EFFFFFF"
        android:drawableLeft="@drawable/baseline_badge_24_1"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter"
        android:text="Username"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:drawableTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/userEmail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userEmail"
        app:layout_constraintTop_toBottomOf="@+id/userEmail" />

    <TextView
        android:id="@+id/userLastName"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/white_box"
        android:backgroundTint="#7EFFFFFF"
        android:drawableLeft="@drawable/baseline_contacts_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter"
        android:text="Last Name"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:drawableTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/userUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userUsername"
        app:layout_constraintTop_toBottomOf="@+id/userFirstName" />

    <Button
        android:id="@+id/PPBtn"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/green2_box"
        android:drawableLeft="@drawable/baseline_privacy_tip_24"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:fontFamily="@font/inter_semibold"
        android:text="Privay Policy"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="@color/green1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TCBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TCBtn"
        app:layout_constraintTop_toBottomOf="@+id/TCBtn"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/userFirstName"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/baseline_contacts_24"
        android:background="@drawable/white_box"
        android:backgroundTint="#7EFFFFFF"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter"
        android:text="First Name"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:drawableTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/userUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userUsername"
        app:layout_constraintTop_toBottomOf="@+id/userUsername" />

    <Button
        android:id="@+id/TCBtn"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/green2_box"
        android:drawableLeft="@drawable/baseline_article_24"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:fontFamily="sans-serif-medium"
        android:text="Terms and Conditions"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="@color/green1"
        app:layout_constraintEnd_toEndOf="@+id/userLastName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userLastName"
        app:layout_constraintTop_toBottomOf="@+id/userLastName" />

</androidx.constraintlayout.widget.ConstraintLayout>