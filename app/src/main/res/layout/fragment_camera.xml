<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scanfragment"
    tools:context=".CameraFragment">

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="204dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/scanBtn"
        android:layout_alignEnd="@+id/scanBtn"
        android:layout_centerVertical="true"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/inter"
        android:text="Simply click the button and scan the QR code attached on the sign"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/scanBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/scanBtn"
        app:layout_constraintTop_toBottomOf="@+id/scanBtn" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="382dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="417dp"
        android:fontFamily="@font/inter_thin"
        android:text="Scan your closest plant!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/welcome_text"
        android:layout_alignEnd="@+id/welcome_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="383dp"
        android:background="@drawable/newbuttondesign"
        android:fontFamily="@font/inter_semibold"
        android:shadowColor="#6A6A6A"
        android:text="SCAN HERE"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="@color/green5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/welcome_text"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/welcome_text"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintVertical_bias="0.91"
        app:rippleColor="@color/green2"
        app:strokeColor="#FF5E5E"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="155dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toTopOf="@+id/desc_text"
        app:layout_constraintEnd_toEndOf="@+id/scanBtn"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/scanBtn"
        app:layout_constraintTop_toBottomOf="@+id/scanBtn"
        app:layout_constraintVertical_bias="0.452"
        app:srcCompat="@drawable/img_1" />

</androidx.constraintlayout.widget.ConstraintLayout>