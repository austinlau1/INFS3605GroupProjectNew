<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/light_green_background"
    tools:context=".LinkToResources">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/resources_title"
                        android:textColor="@color/green5"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="26sp"
                        android:text="Link to Resources"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <ImageView
                        android:id="@+id/img_details_resources"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_6"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="200dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/author_text_detail"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="10sp"
                        android:text="Indigenous Strategy, Education and Research"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/content_detail_title1"
                android:textSize="20sp"
                android:fontFamily="@font/inter_black"
                android:textColor="@color/black"
                android:text="Nura Gili Unit"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/resources_detail_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter"
                android:text="@string/nura_gili"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp">
            </TextView>

            <ImageView
                android:id="@+id/img_nura"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_7">

            </ImageView>

            <TextView
                android:id="@+id/content_detail_title2"
                android:textSize="20sp"
                android:fontFamily="@font/inter_black"
                android:textColor="@color/black"
                android:text="IndigiGrow"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/resources_detail_2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter"
                android:text="@string/IndigiGrow"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp">

            </TextView>
            <ImageView
                android:id="@+id/img_indigi"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/indigigrow">

            </ImageView>
            <TextView
                android:id="@+id/resources_detail_title3"
                android:textSize="20sp"
                android:fontFamily="@font/inter_black"
                android:textColor="@color/black"
                android:text="La Perouse Local Aboriginal Land Council (La Per LALC)"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/resources_detail_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter"
                android:text="@string/la_perouse"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp">

            </TextView>
            <ImageView
                android:id="@+id/img_laperouse"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/laperpise">

            </ImageView>
            <TextView
                android:id="@+id/resources_detail_title4"
                android:textSize="20sp"
                android:fontFamily="@font/inter_black"
                android:textColor="@color/black"
                android:text="Gujaga Foundation"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/resources_detail_4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter"
                android:text="@string/Gujaga_foundation"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp">
            </TextView>
            <ImageView
                android:id="@+id/img_gujaga"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/gujaga1">

            </ImageView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
