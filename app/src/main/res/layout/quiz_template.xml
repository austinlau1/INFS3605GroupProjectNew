<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizbgwunsw"
    tools:context=".Quizzes.EasyProgress">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/white_box"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Question"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/baseline_timer_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_black"
                android:text="1:00"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/question_text_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="51dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Test Question"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/optionsRadioGroup"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_text_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/option1RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/inter"
                    android:padding="10dp"
                    android:text="Option 1" />

                <RadioButton
                    android:id="@+id/option2RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/inter"
                    android:padding="10dp"
                    android:text="Option 2" />

                <RadioButton
                    android:id="@+id/option3RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/inter"
                    android:padding="10dp"
                    android:text="Option 3" />

                <RadioButton
                    android:id="@+id/option4RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/inter"
                    android:padding="10dp"
                    android:text="Option 4" />

            </RadioGroup>

            <Button
                android:id="@+id/next_button"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_below="@+id/optionsRadioGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:background="@drawable/green4_box"
                android:fontFamily="@font/inter_semibold"
                android:text="Submit" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>