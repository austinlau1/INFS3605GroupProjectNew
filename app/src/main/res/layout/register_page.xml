<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="650dp"
        android:layout_height="890dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/light_green_background" />

    <TextView
        android:id="@+id/login_title_text2"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Hi there!"
        android:textAlignment="center"
        android:textColor="#372D0F"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_text2"
        android:layout_width="194dp"
        android:layout_height="25dp"
        android:layout_marginBottom="188dp"
        android:text="Register to start exploring"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginTop="416dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="    Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginTop="476dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="    Password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="11dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="    Email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginTop="236dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="    First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="    Last Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name" />

    <Button
        android:id="@+id/have_acc_button"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/light_green_background"
        android:fontFamily="@font/inter_semibold"
        android:shadowColor="#6A6A6A"
        android:text="Login"
        android:textColor="#4CAF50"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/green3"
        tools:ignore="TouchTargetSizeCheck" />
<!--        app:layout_constraintTop_toBottomOf="@+id/login_button"-->

    <TextView
        android:id="@+id/new_user_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:text="I already have an account."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.025" />
<!--        app:layout_constraintTop_toBottomOf="@+id/login_button"-->


    <Button
        android:id="@+id/register_button"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/newbuttondesign"
        android:fontFamily="@font/inter_semibold"
        android:shadowColor="#6A6A6A"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/green3"
        app:strokeColor="#FF5E5E"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/plant_wallpaper"
        android:layout_width="270dp"
        android:layout_height="178dp"
        app:layout_constraintBottom_toTopOf="@+id/first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three_trees" />

</androidx.constraintlayout.widget.ConstraintLayout>