<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerviewbg2"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/plantPicture"
        android:layout_width="106dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plantIDNum"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/plantNm"
        android:layout_width="205dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Plant Name"
        android:textColor="#000000"
        android:textSize="20sp"
        app:drawableTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/plantPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plantIDNum"
        android:layout_width="19dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:text="ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plantScientific"
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter"
        android:text="Scientific Name"
        android:textColor="@color/green5"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/plantPicture"
        app:layout_constraintTop_toBottomOf="@+id/plantNm" />

</androidx.constraintlayout.widget.ConstraintLayout>